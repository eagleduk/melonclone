mixin song(index, song)
    li(class="song-item",data-id=song.id, data-_id=song._id) 
        div(class="song-ranking")
            h1=index+1
        div(class="song-content")
            div(class="song-img")
                img(width=song.snippet.thumbnails.default.width,height=song.snippet.thumbnails.default.height,src=song.snippet.thumbnails.default.url)
            div(class="song-info")
                h2=song.snippet.title
                //- span=song.statistics.viewCount
        div(class="song-player")
            button(type="button" class="btn-control play-song",data-id=song.id, data-title=song.snippet.title)=">"
            button(type="button" class="btn-control add-song",data-id=song.id, data-title=song.snippet.title)="+"